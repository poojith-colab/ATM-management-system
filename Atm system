                    <label for="confirmPin">Confirm New PIN</label>
                    <input type="password" id="confirmPin" maxlength="4" placeholder="****">
                </div>
                <button class="btn btn-primary" onclick="changePin()">Change PIN</button>
                <button class="btn back-btn" onclick="showScreen('menuScreen')">‚Üê Back to Menu</button>
