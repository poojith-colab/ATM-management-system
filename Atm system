        <div class="atm-screen">
            <!-- PIN Entry Screen -->
            <div class="screen-section active" id="pinScreen">
                <div class="user-info">
                    <div class="name">Welcome!</div>
                    <div class="card-number">**** **** **** 3456</div>
                </div>
                <div class="form-group">
                    <label for="pinInput">Enter Your 4-Digit PIN</label>
                    <input type="password" id="pinInput" maxlength="4" placeholder="****" autocomplete="off">
                </div>
                <div id="pinError" style="display: none;"></div>
                <button class="btn btn-primary" onclick="verifyPin()">üîê Enter</button>
                <p style="text-align: center; margin-top: 15px; color: #999; font-size: 13px;">
                    Default PIN: 1234
                </p>
            </div>

            <!-- Main Menu Screen -->
            <div class="screen-section" id="menuScreen">
                <div class="user-info">
                    <div class="name" id="userName">John Doe</div>
                    <div class="card-number">Card: **** **** **** 3456</div>
                </div>
                <div class="menu-grid">
                    <div class="menu-btn" onclick="showScreen('balanceScreen')">
                        <div class="icon">üí∞</div>
                        <div class="text">Check Balance</div>
                    </div>
                    <div class="menu-btn" onclick="showScreen('withdrawScreen')">
                        <div class="icon">üíµ</div>
                        <div class="text">Withdraw</div>
