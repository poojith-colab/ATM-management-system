    <script>
        // ATM System JavaScript Implementation
        class ATMSystem {
            constructor() {
                this.name = "John Doe";
                this.cardNumber = 1234567890123456;
                this.balance = 10000;
                this.pin = 1234;
                this.chances = 3;
                this.statement = [];
            }

            verifyPin(enteredPin) {
                if (parseInt(enteredPin) === this.pin) {
                    this.chances = 3;
                    return true;
                } else {
                    this.chances--;
                    return false;
                }
            }

            withdraw(amount) {
                if (amount <= 0 || amount % 100 !== 0) {
                    throw new Error("Amount must be positive and in multiples of ‚Çπ100");
                }
                if (amount > this.balance) {
                    throw new Error("Insufficient funds in your account");
                }
                this.balance -= amount;
                this.statement.unshift({type: 'debit', amount: amount, date: new Date()});
                return this.balance;
            }

            deposit(amount) {
                if (amount <= 0 || amount % 100 !== 0) {
                    throw new Error("Amount must be positive and in multiples of ‚Çπ100");
                }
                this.balance += amount;
                this.statement.unshift({type: 'credit', amount: amount, date: new Date()});
            }

            changePin(newPin) {
                this.pin = parseInt(newPin);
            }

            getStatement() {
                return this.statement.slice(0, 5);
            }
        }

        const atm = new ATMSystem();

        function showScreen(screenId) {
            document.querySelectorAll('.screen-section').forEach(screen => {
                screen.classList.remove('active');
            });
            document.getElementById(screenId).classList.add('active');
        }

        function verifyPin() {
            const pinInput = document.getElementById('pinInput').value;
            const errorDiv = document.getElementById('pinError');
            
            if (pinInput.length !== 4) {
                showAlert(errorDiv, 'Please enter a 4-digit PIN', 'error');
                return;
            }

            if (atm.verifyPin(pinInput)) {
                document.getElementById('pinInput').value = '';
                errorDiv.style.display = 'none';
                document.getElementById('userName').textContent = atm.name;
                updateBalance();
                showScreen('menuScreen');
            } else {
                showAlert(errorDiv, `Wrong PIN! Chances remaining: ${atm.chances}`, 'error');
                if (atm.chances === 0) {
                    showAlert(errorDiv, 'Card blocked! Contact your bank.', 'error');
                    document.getElementById('pinInput').disabled = true;
                }
            }
        }

        function withdraw() {
            const amount = parseFloat(document.getElementById('withdrawAmount').value);
            const alertDiv = document.getElementById('withdrawAlert');
            
            try {
                atm.withdraw(amount);
                showAlert(alertDiv, `Successfully withdrew ‚Çπ${amount}. New balance: ‚Çπ${atm.balance}`, 'success');
                document.getElementById('withdrawAmount').value = '';
                updateBalance();
                setTimeout(() => showScreen('menuScreen'), 2000);
            } catch (error) {
                showAlert(alertDiv, error.message, 'error');
            }
        }

        function deposit() {
            const amount = parseFloat(document.getElementById('depositAmount').value);
            const alertDiv = document.getElementById('depositAlert');
            
            try {
                atm.deposit(amount);
                showAlert(alertDiv, `Successfully deposited ‚Çπ${amount}. New balance: ‚Çπ${atm.balance}`, 'success');
                document.getElementById('depositAmount').value = '';
                updateBalance();
                setTimeout(() => showScreen('menuScreen'), 2000);
            } catch (error) {
                showAlert(alertDiv, error.message, 'error');
            }
        }

        function changePin() {
            const newPin = document.getElementById('newPin').value;
            const confirmPin = document.getElementById('confirmPin').value;
            const alertDiv = document.getElementById('changePinAlert');
            
            if (newPin.length !== 4 || confirmPin.length !== 4) {
                showAlert(alertDiv, 'PIN must be 4 digits', 'error');
                return;
            }
            
            if (newPin !== confirmPin) {
                showAlert(alertDiv, 'PINs do not match', 'error');
                return;
            }
            
            atm.changePin(newPin);
            showAlert(alertDiv, 'PIN changed successfully!', 'success');
            document.getElementById('newPin').value = '';
            document.getElementById('confirmPin').value = '';
            setTimeout(() => showScreen('menuScreen'), 2000);
        }

        function updateBalance() {
            document.getElementById('balanceAmount').textContent = atm.balance.toFixed(0);
        }

        function updateStatement() {
            const statementList = document.getElementById('statementList');
            const transactions = atm.getStatement();
            
            if (transactions.length === 0) {
                statementList.innerHTML = '<div class="statement-empty">No transactions yet</div>';
                return;
            }
            
            statementList.innerHTML = transactions.map(trans => `
                <div class="statement-item ${trans.type}">
                    <div>
                        <strong>${trans.type === 'credit' ? 'üíö Credited' : '‚ù§Ô∏è Debited'}</strong>
                        <div style="font-size: 12px; color: #999; margin-top: 3px;">
                            ${trans.date.toLocaleDateString()} ${trans.date.toLocaleTimeString()}
                        </div>
                    </div>
                    <div style="font-weight: 700; font-size: 18px;">
                        ‚Çπ${trans.amount}
                    </div>
                </div>
            `).join('');
        }

        function showAlert(container, message, type) {
            container.innerHTML = `<div class="alert alert-${type}">${message}</div>`;
            container.style.display = 'block';
            setTimeout(() => {
                container.style.display = 'none';
            }, 5000);
        }

        function exitATM() {
            if (confirm('Are you sure you want to exit?')) {
                showScreen('pinScreen');
                document.getElementById('pinInput').value = '';
            }
        }

        // Allow Enter key to submit PIN
        document.getElementById('pinInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') verifyPin();
        });
    </script>
</body>
</html>
